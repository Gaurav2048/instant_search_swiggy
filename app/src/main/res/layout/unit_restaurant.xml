<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/imageView"
        />
    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:background="#fff"
        android:layout_marginTop="10dp"

        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_stars"
            android:layout_gravity="center_vertical"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating"
            android:textStyle="bold"
            android:textColor="#000"
            android:text="4.0"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLines="1"
        android:layout_toRightOf="@+id/imageView"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="Khorika"
        android:textAllCaps="true"
        android:textSize="18dp"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:id="@+id/name_restaurant"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLines="1"
        android:layout_toRightOf="@+id/imageView"
        android:layout_marginRight="10dp"
        android:text="Indian, Chinese, continental"
        android:textAllCaps="false"
        android:textSize="14dp"
        android:layout_marginLeft="10dp"
        android:textColor="#C4000000"
        android:id="@+id/dishes"
        android:layout_below="@+id/name_restaurant"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/dishes"
        android:layout_toRightOf="@+id/imageView"
        android:layout_marginTop="7dp"
        android:background="#A47C7B7B"
        android:layout_marginRight="30dp"
        android:id="@+id/devider"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20% OFF"
        android:background="#000"
        android:textColor="#fff"
        android:layout_below="@+id/devider"
        android:layout_toRightOf="@+id/imageView"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/discount"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"

        />


</RelativeLayout>